{
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true,
        "source.fixAll.stylelint": true,
    },
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
    ],
    "stylelint.configFile": ".stylelintrc",
    "stylelint.validate": [
        "css",
        "less",
        "scss",
        "postcss"
    ],
    "editor.formatOnSave": false,
}